@page
@model EarthNear1.Pages.Book.CreateBookModel
@{
    ViewData["Title"] = "CreateBook";
}

<div class="row">
    <div class="col-sm-4">
        <form method="post">
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Booking.UserId" class="control-label"></label>
                <select asp-for="@Model.Booking.UserId" asp-items="@Model.userList" class="form-control"></select>
                <span asp-validation-for="@Model.Booking.UserId" class="form-control"></span>
            </div>
            
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Booking.ShiftId" class="control-label"></label>
                <input asp-for="@Model.Booking.ShiftId" class="form-control"/>
                <span asp-validation-for="@Model.Booking.ShiftId"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
