@page
@using EarthNear1.Models
@model EarthNear1.Pages.Shifts.GetAllShiftsModel
@{
    ViewData["Title"] = "GetAllShifts";
}
<h1>VagtTider</h1>

<p>
    <a asp-page="/Shifts/CreateShift"><strong>Ny vagt+</strong></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Dato
            </th>
            <th>
                Tidspunkt
            </th>
            <th>
                VagtTyper
            </th>
            <th>
                Vagtstatus
            </th>
            <th>
                Knapper
            </th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Shifts.Count() != 0)
    {
        @foreach (var item in Model.Shifts)
        {
            <tr>
                <td>
                    @item.Date.ToString("d")
                </td>

                <td>
                    @item.TimeFrom:@item.TimeFrom - @item.TimeTo:@item.TimeTo.
                </td>

                <td >
                    @item.ShiftType
                </td>
                
                <td>
                    
                    <input type="radio" asp-for="@Model.Shift.ShiftStatus" value="true" class="custom-radio"/>Taget
                    <input type="radio" asp-for="@Model.Shift.ShiftStatus" value="false" class="custom-radio"/> ikke taget
                </td>

                <td>
                    <div>
                        <a class="btn btn-primary form-control" asp-page="/Shifts/UpdateShift" asp-route-id="@item.ShiftId">Opdater vagt</a>
                    </div>
                    <div>
                        <a class="btn btn-danger form-control" asp-page="/Shifts/DeleteShift" asp-route-id="@item.ShiftId">Slet vagt</a>
                    </div>
                </td>

            </tr>
         }
    }
    </tbody>
</table>