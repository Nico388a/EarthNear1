@page
@model EarthNear1.Pages.Shifts.GetAllShiftsModel
@{
    ViewData["Title"] = "GetAllShifts";
}
<h1>VagtTider</h1>

<p>
    <a asp-page="/Shifts/CreateShift"><strong>Ny vagt+</strong></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Vagt Id
            </th>
            <th>
                Tirsdag
            </th>
            <th>
                Torsdag
            </th>
            <th>
                Fredag
            </th>
            <th>
                Vagt på døgnet
            </th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Shifts.Count() != 0)
    {
        @foreach (var item in Model.Shifts)
        {
            <tr>
                
                <td>
                    @item.ShiftId
                </td>

                <td>
                    @item.DateFrom
                    @item.DateTo
                </td>
                <td>
                    @item.DateFrom
                    @item.DateTo
                </td>

                <td>
                    @item.DateFrom
                    @item.DateTo
                </td>

                <td>
                    @item.Description
                </td>

            </tr>
        }
    }
    </tbody>
</table>