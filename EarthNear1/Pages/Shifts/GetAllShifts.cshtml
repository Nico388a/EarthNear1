@page
@using EarthNear1.Models
@model EarthNear1.Pages.Shifts.GetAllShiftsModel
@{
    ViewData["Title"] = "GetAllShifts";
}
<h1>VagtTider</h1>

<p>
    <a asp-page="/Shifts/CreateShift"><strong>Ny vagt+</strong></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Dato
            </th>
            <th>
                Tidspunkt
            </th>
            <th>
                VagtTyper
            </th>
            <th>
                Vagtstatus
            </th>
            <th>
                Knapper
            </th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Shifts.Count() != 0)
    {
        @foreach (var item in Model.Shifts)
        {
            <tr>

                <td>
                    @item.Date
                </td>

                <td>
                    @item.TimeFrom - @item.TimeTo
                </td>

                <td >
                    @item.ShiftType
                </td>
                
                <td>
                    @item.ShiftStatus
                </td>

                <td>
                    <a class="btn btn-primary" asp-page="/Shifts/UpdateShift" asp-route-id="@item.ShiftId">Opdater vagt</a>
                </td>
                
                <td>
                    <a class="btn btn-danger" asp-page="/Shifts/DeleteShift" asp-route-id="@item.ShiftId">Slet vagt</a>
                </td>

            </tr>
        }
    }
    </tbody>
</table>