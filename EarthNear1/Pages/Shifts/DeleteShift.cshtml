@page
@model EarthNear1.Pages.Shifts.DeleteShiftModel
@{
    ViewData["Title"] = "DeleteShift";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Dato:
        </dt>
        <dd class="col-sm-10">
           @Html.DisplayFor(model=> model.Shift.Date.ToString("ddddddd")) -@Html.DisplayFor(model =>model.Shift.Date.ToString("D"))
        </dd>

        <dt class="col-sm-2">
            Vagt fra:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shift.TimeFrom.Hours.ToString("00"))- @Html.DisplayFor(model => model.Shift.TimeFrom.Minutes.ToString("00"))
        </dd>

        <dt class="col-sm-2">
            Vagt Til
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shift.TimeTo.Hours.ToString("00"))-@Html.DisplayFor(model => model.Shift.TimeTo.Minutes.ToString("00"))
        </dd>

        <dt class="col-sm-2">
            Vagttype
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shift.ShiftTypeId)
        </dd>

        <dt class="col-sm-2">
            Vagt status
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shift.ShiftStatus)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Shift.ShiftId"/>
        <input type="submit" value="Slet" class="btn btn-danger"/>
        <a asp-page="GetAllShifts" class="btn btn-primary"><strong>Tilbage til vagtliste</strong></a>
    </form>
</div>