@page
@model EarthNear1.Pages.Shifts.UpdateShiftModel
@{
    ViewData["Title"] = "UpdateShift";

    <h1>Opdatere vagt</h1>
    <form method="post">
        <div class="row">
            <div class="col-sm-6">

                <div class="form-group">
                    <div class="form-group">
                        <label hidden="hidden" asp-for="@Model.Shift.ShiftId" class="control-label"></label>
                        <input hidden="hidden" asp-for="@Model.Shift.ShiftId" class="form-control"/>
                        <span asp-validation-for="@Model.Shift.ShiftId" class="text-danger"></span>
                    </div>
                    <label asp-for="@Model.Shift.Date" class="control-label"></label>
                    <input asp-for="@Model.Shift.Date" class="form-control"/>
                    <span asp-validation-for="@Model.Shift.Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Shift.TimeFrom" class="control-label"></label>
                    <input asp-for="@Model.Shift.TimeFrom"/>
                    <span asp-validation-for="@Model.Shift.TimeFrom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Shift.TimeTo" class="control-label"></label>
                    <input asp-for="@Model.Shift.TimeTo" class="form-control"/>
                    <span asp-validation-for="@Model.Shift.TimeTo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Shift.ShiftTypeId" class="control-label"></label>
                    <input asp-for="Shift.ShiftTypeId" class="form-control"/>
                    <span asp-validation-for="@Model.Shift.ShiftTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Shift.ShiftStatus" class="control-label"></label>
                    <input asp-for="@Model.Shift.ShiftStatus"/>
                    <span asp-validation-for="@Model.Shift.ShiftStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Gem" class="btn btn-primary"/>
                </div>
            </div>
        </div>
    </form>
}
