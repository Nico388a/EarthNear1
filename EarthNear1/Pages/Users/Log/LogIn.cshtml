@page
@model EarthNear1.Pages.Users.Log.LogInModel
@{
    ViewData["Title"] = "LogIn";
}


<div class="container p-3 my-3 border" style="width:25%">
    <h3 class="text-center">Login</h3>
    <p class="text-danger">@Model.AccessDenied</p>
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.User.Email" class="control-label"></label>
            <input asp-for="@Model.User.Email" class="form-control" />
            <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.PasswordCheck" class="control-label"></label>
            <input asp-for="@Model.User.PasswordCheck" class="form-control" />
            <span asp-validation-for="@Model.User.PasswordCheck" class="text-danger"></span>
        </div>
        <div class="form-check-group">
            <input type="submit" value="Login" class="btn-block btn btn-primary"/>
        </div>
        <br />
    </form>
    <p>
        <a asp-page="/Users/Create" class="btn-block btn btn-primary">Tilmeld</a>
    </p>
</div>
