@page
@model EarthNear1.Pages.Types.ShiftTypes.DeleteShiftTypeModel
@{
    ViewData["Title"] = "DeleteShiftType";
}
<h1 class="text-danger">Er du sikker på du vil slette vagttypen</h1>
<h3 class="text-danger">hvis du sletter vagttypen vil vagter der indeholder denne vagttype blive slettet</h3>
<br/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Vagttypenavn:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShiftType.ShiftName)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="ShiftType.ShiftTypeId"/>
        <input type="submit" value="Slet" class="btn btn-danger"/>
        <a asp-page="GetAllShiftTypes" class="btn btn-primary">Tilbage</a>
    </form>
</div>
