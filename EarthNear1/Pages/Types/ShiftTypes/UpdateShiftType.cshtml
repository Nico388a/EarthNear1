@page
@model EarthNear1.Pages.Types.ShiftTypes.UpdateShiftTypeModel
@{
    ViewData["Title"] = "UpdateShiftType";
}

<h1>Opdater vagttype</h1>
<form method="post">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <div class="form-group">
                    <label hidden="hidden" asp-for="@Model.ShiftType.ShiftTypeId" class="control-label"></label>
                    <input hidden="hidden" asp-for="@Model.ShiftType.ShiftTypeId" class="form-control"/>
                    <span asp-validation-for="@Model.ShiftType.ShiftTypeId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ShiftType.ShiftName" class="control-label"></label>
                    <input asp-for="@Model.ShiftType.ShiftName" class="form-control"/>
                    <span asp-validation-for="@Model.ShiftType.ShiftName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="opdater" class="btn btn-primary"/>
                </div>
            </div>
        </div>
    </div>
</form>
