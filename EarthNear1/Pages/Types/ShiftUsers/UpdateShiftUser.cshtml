@page
@using EarthNear1.Interfaces
@inject IUserService userSV
@inject IShiftTypeService theShiftType
@model EarthNear1.Pages.Types.ShiftUsers.UpdateShiftUserModel
@{
    ViewData["Title"] = "UpdateShiftUser";
}

<h1>Opdater jobtype</h1>

<div class="row">
    <div class="col-sm-4">
        <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.ShiftUser.UserId"></label><br />
                    @userSV.GetUserFromIdAsync(Model.User.UserId).Result.Name
                    @userSV.GetUserFromIdAsync(Model.User.UserId).Result.AfterName
                    <input type="hidden" asp-for="@Model.ShiftUser.UserId" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ShiftUser.ShiftTypeId" class="control-label"></label><br />
                    @foreach (var jt in Model.shiftTypes)
                    {
                        <input type="checkbox" value="@jt.ShiftTypeId" />
                        @jt.ShiftName<br />
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Updater" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>
